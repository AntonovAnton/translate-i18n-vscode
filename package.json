{
  "name": "l10n.translate-i18n",
  "displayName": "Translate I18n JSON by l10n.dev",
  "description": "Translate i18n JSON files with AI directly inside VS Code using l10n.dev â€” smart, context-aware localization powered by AI.",
  "version": "0.0.1",
  "publisher": "l10n-dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/AntonovAnton/l10n-vscode.git"
  },
  "homepage": "https://l10n.dev",
  "bugs": {
    "url": "https://github.com/AntonovAnton/l10n-vscode/issues"
  },
  "keywords": [
    "translation",
    "i18n",
    "internationalization",
    "localization",
    "l10n",
    "ai",
    "json",
    "multilingual"
  ],
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:json"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "l10n.translate-i18n.translate",
        "title": "Translate to...",
        "category": "l10n.dev"
      },
      {
        "command": "l10n.translate-i18n.setApiKey",
        "title": "Set API Key",
        "category": "l10n.dev"
      },
      {
        "command": "l10n.translate-i18n.configureOptions",
        "title": "Configure Translation Options",
        "category": "l10n.dev"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "l10n.translate-i18n.translate",
          "when": "resourceExtname == .json",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "l10n.translate-i18n.translate",
          "when": "resourceExtname == .json",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "l10n.dev Translation",
      "properties": {
        "l10n.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for l10n.dev service (stored securely)",
          "scope": "machine"
        },
        "l10n.useContractions": {
          "type": "boolean",
          "default": true,
          "description": "Use grammar contractions (makes translation less formal)"
        },
        "l10n.useShortening": {
          "type": "boolean",
          "default": false,
          "description": "Use shortened forms if translation is longer than source text"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "esbuild": "^0.25.8",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
